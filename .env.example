# App Configuration
APP_NAME=Nuclei Template Generator
APP_VERSION=1.0.0
APP_DEBUG=false
APP_HOST=localhost
APP_PORT=8000

# LLM Configuration
LLM_PROVIDER=gemini
LLM_MODEL=gemini-2.0-flash-exp
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=2000
LLM_TIMEOUT=30
# API Keys
GEMINI_API_KEY=xxxxxxxxxxxxxx
OPENAI_API_KEY=xxxxxxxxxxxxxx

# Vector Database Configuration
VECTOR_DB_TYPE=chromadb
VECTOR_DB_MODE=client
VECTOR_DB_HOST=localhost
VECTOR_DB_PORT=8001
VECTOR_DB_COLLECTION_NAME=nuclei_templates
VECTOR_DB_EMBEDDING_MODEL=all-MiniLM-L6-v2
VECTOR_DB_CHUNK_SIZE=1000
VECTOR_DB_CHUNK_OVERLAP=200

# Nuclei Configuration
NUCLEI_BINARY_PATH=nuclei
NUCLEI_TIMEOUT=30
NUCLEI_VALIDATE_ARGS=--validate,--verbose
NUCLEI_TEMPLATES_DIR=rag_data/nuclei_templates

# RAG Configuration
RAG_MAX_RETRIEVED_DOCS=5
RAG_SIMILARITY_THRESHOLD=0.7
RAG_SEARCH_TYPE=similarity

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
LOG_FILE_PATH=logs/app.log
LOG_MAX_BYTES=10485760
LOG_BACKUP_COUNT=5

# Template Generation Configuration
TEMPLATE_MAX_RETRIES=3
TEMPLATE_VALIDATION_REQUIRED=true
TEMPLATE_OUTPUT_FORMAT=yaml
TEMPLATE_INCLUDE_METADATA=true

# Template Auto-Update Configuration
# Enable automatic template updates (true/false)
AUTO_UPDATE_TEMPLATE_NUCLEI=true
# Time to run daily updates (HH:MM format, 24-hour)
TIME_UPDATE_TEMPLATE=19:19

# Docker Configuration (for docker-compose)
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
API_EXTERNAL_PORT=8000
CHROMADB_HOST=chromadb
CHROMADB_PORT=8000
CHROMADB_EXTERNAL_PORT=8001
CHROMA_SERVER_AUTHN_CREDENTIALS_FILE=/chroma/server.htpasswd
CHROMA_SERVER_AUTHN_PROVIDER=chromadb.auth.basic_authn.BasicAuthenticationServerProvider
ANONYMIZED_TELEMETRY=False
IS_PERSISTENT=TRUE
PERSIST_DIRECTORY=/chroma/chroma
PYTHONPATH=/app
PYTHONUNBUFFERED=1

